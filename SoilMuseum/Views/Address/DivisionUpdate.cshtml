@model SoilMuseum.Models.Division

@{
    ViewBag.Title = "DivisionUpdate";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h4>Division Update</h4>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>Division</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" id="Division_ID" name="Division_ID" value="@Model.Division_ID" />
