@model SoilMuseum.Models.Employee_Designation

@{
    ViewBag.Title = "Designation_Update";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h4>Designation Update</h4>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h5 class="alert-danger">@ViewBag.DesignationUpdate</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" id="Employee_DID" name="Employee_DID" value="@Model.Employee_DID" />
        <div class="form-group">
            @Html.LabelFor(model => model.Designation_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Designation_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Designation_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Designation_List")
</div>
